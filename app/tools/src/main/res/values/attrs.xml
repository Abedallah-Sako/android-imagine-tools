<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="WeatherView">
        <attr name="indicatorSelectedColor" format="color"/>
        <attr name="indicatorDefaultColor" format="color"/>
        <attr name="WeatherTextColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="SegmentedProgressBarView">
        <attr name="segmentCount" format="integer"/>
        <attr name="segmentSpacing" format="float"/>
        <attr name="defaultSegmentColor" format="color"/>
        <attr name="segmentAlpha" format="float"/>
        <attr name="drawableWidth" format="dimension"/>
        <attr name="drawableWidthPositionDominator" format="float"/>
        <attr name="gradientColor1" format="color"/>
        <attr name="gradientColor2" format="color"/>
        <attr name="gradientColor3" format="color"/>
        <attr name="solidProgressColor" format="color"/>
        <attr name="enableDrawable" format="boolean"/>
    </declare-styleable>
    
    <declare-styleable name="WavesView">
        <attr name="waveColor" format="color" />
        <attr name="waveStrokeWidth" format="dimension" />
        <attr name="waveGap" format="dimension" />
    </declare-styleable>

    <declare-styleable name="FadingImageView">
        <attr name="imageDrawable" format="reference"/>
        <attr name="ImageIsCircle" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="GlowTextView">
        <attr name="glowColor" format="color"/>
        <attr name="textColor" format="color"/>
        <attr name="textSize" format="dimension"/>
        <attr name="glowRadius" format="dimension"/>
        <attr name="startColorAlpha" format="float"/>
        <attr name="endColorAlpha" format="float"/>
        <attr name="text" format="string"/>
        <attr name="fontFamily" format="string"/>
    </declare-styleable>

</resources>