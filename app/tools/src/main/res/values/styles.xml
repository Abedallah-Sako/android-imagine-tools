<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Image view Corner style -->

    <style name="ShapeAppearanceOverlay_card_top_corners" parent="">


        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">25dp</item>
        <item name="cornerSizeTopRight">25dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>

    </style>

    <style name="imageViewRounded6dp">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">6dp</item>
    </style>

    <style name="imageViewRounded7dp">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">7.5dp</item>
    </style>

    <style name="imageViewRounded10dp">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="imageViewRounded11dp">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">11dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <style name="imageViewRounded12dp">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <style name="imageViewRounded13dp">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">13dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <style name="imageViewRounded15dp">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
    </style>

    <style name="imageViewRounded20dp">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="imageViewRounded25dp">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">25dp</item>
    </style>

    <style name="imageViewRounded36dp">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">36dp</item>

    </style>

    <style name="imageViewRounded50dp">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50dp</item>
    </style>

    <style name="fiftyPercentRoundedStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="MyBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/MyBottomSheetStyle</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="MyBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="behavior_skipCollapsed">true</item>
        <item name="behavior_fitToContents">true</item>
        <item name="behavior_peekHeight">1000dp</item> //that will help to skip collapsed state at initial
        <item name="behavior_hideable">true</item>
    </style>

    <style name="Widget.WaveView" parent="@android:style/Widget">
        <item name="waveStrokeWidth">1dp</item>
        <item name="waveColor">#000000</item>
        <item name="waveGap">16dp</item>
    </style>

    <!--  Dialog Text input fields style  -->

    <style name="TextInputFieldStyle" parent="">
        <item name="colorControlActivated">@color/main</item>
    </style>

    <!--    Range Slider    -->
    <style name="rangeSliderLabelStyle" parent="@style/Widget.MaterialComponents.Tooltip">
        <!-- change label background color -->
        <item name="backgroundTint">@color/dark</item>

        <!-- change label radius -->
        <item name="shapeAppearance">@style/ShapeAppearanceRangeSlider</item>

        <!-- change label text appearance -->
        <item name="android:textAppearance">@style/rangeSliderLabelStyle.TextAppearance</item>
    </style>

    <style name="rangeSliderLabelStyle.TextAppearance" parent="@style/TextAppearance.MaterialComponents.Tooltip">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ShapeAppearanceRangeSlider" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">7dp</item>
    </style>

    <!--  Calendar style  -->
    <style name="CalendarTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/main</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">cut</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerSize">16dp</item>
    </style>

    <style name="EditTextUnderLine">
        <item name="colorControlNormal">@color/black_10</item>
        <item name="colorControlActivated">@color/main</item>
        <item name="colorControlHighlight">@color/main</item>
    </style>

</resources>